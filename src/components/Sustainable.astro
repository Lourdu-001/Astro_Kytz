        text-align: left;
        color: #000000;
    }
    .benefit-box{
        background-color: #F5F5F7;
        padding: 30px;
        border-radius: 20px;
    }
    .green-websites-inner-layer{
        background-color: #F5F5F7;
        padding: 30px;
