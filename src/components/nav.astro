---
    import logo from "../../public/kytz_logo.webp" 
---

<style>
    /* ------------------------ NAVBAR -------------------
    _______________________________________________________ */
    
    nav{
        transition: all 1s ease;
        height: auto;
        background-color: #06041A;
        z-index: 1;
    }
    .Dlogo{
        font-family: Actor;
        font-size: 26px;
        font-weight: 400;
        line-height: 31px;
        letter-spacing: -0.02em;
        text-align: left;
        color:rgba(41, 44, 117, 1);
    }
    #sideopen_D{
        position:absolute;
        visibility: hidden;
        cursor: pointer;
    }
    .sidebox_D{
        position:absolute;  
        display: none;
        transition: all 1s ease-in-out;
        z-index:1;
        top:0;
        width: 36%;
    }
    #sideopen_D:checked ~ .sidebox_D{
        display: block;
        right:0;
        top: 68px;
    }
    .sidebar_dropdown{
        padding: 4rem 2.5rem;
        border-radius: 10px;
        background-color: black;
        box-shadow: 1px 1px 5px gray;
        background-color:#1F1D31;
        margin-top: 1rem;
    }
    .background_images{
        z-index: -1;
        inset:0;
        background-image: url("assets/Images/bg1.png");
        background-size: contain;
        background-repeat: no-repeat;
        transition: all .3 ease;
    }
    .kytz-label{
        font-family: Inter;
        font-size: 16px;
        font-weight: 500;
        line-height: 19.36px;
        text-align: left;
        color: #FFFFFF;
        display:inline-flex;
        align-items:center;
        background-color: #1E1D30;
        cursor: pointer;
    }
    .navbarD{
        height: 100px;
        background-color: #04030A;
    }
    .navlistItem{
        font-family: Inter;
        font-size: 16px;
        font-weight: 400;
        line-height: 19.36px;
        text-align: left;
        color: rgb(255, 255, 255, .5);
        padding-bottom: 1rem;
    }
    .navlistItem:hover{
        color: rgb(255, 255, 255);
    }
    #headerD{
        height: 633px;
    }
    .header_content_section{
        height: 548px;
    }
    .contact_D{
        border-radius: 6px;
        background: #19B68F;
        color: #FFF;
        font-family: Inter;
        font-size: 17px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        letter-spacing: -0.17px;
    }
    .button_D{
        font-size: 16px;
        font-weight: 600;
        line-height: 19.36px;
        color: #04030A;
        background-color: #FFFFFF;
        border-radius: 11px;
        padding: .8rem 1.8rem;
    }
    .nav_contact_line{
        background: rgba(41, 44, 117, 1);
        outline: 1px solid #0DC195;
    }
    .nav_contact > span{
        font-family: Inter;
        font-size: 15px;
        font-weight: 400;
        text-align: left;
        color: rgba(255, 255, 255, 1);
        padding: 0.5rem 0;
        letter-spacing: .2px;
    }
    .appointment{
        font-family: Inter;
        font-size: 15px;
        font-weight: 500;
        line-height: 18.15px;
        letter-spacing: -0.02em;
        text-align: left;
        color: rgba(255, 255, 255, 1);
        padding: 14px 25px 14px 25px;
        background-color: rgba(66, 190, 163, 1);
        border-radius: 33px;
    }
    .facebook{
        background-image: url("../images/socialmedia/facebook.webp");
        width: 21px;
        height: 21px;
        background-size: contain;
        background-repeat: no-repeat;
    }
    .linkedin{
        background-image: url("../images/socialmedia/linkedIn.webp");
        width: 20px;
        height: 20px;
        background-size: contain;
        background-repeat: no-repeat;
    }
    .instagram{
        background-image: url("../images/socialmedia/instagram.webp");
        width: 20px;
        height: 20px;
        background-size: contain;
        background-repeat: no-repeat;
    }
    .youtube{
        background-image: url("../images/socialmedia/youtube.webp");
        width: 22px;
        height: 15.47px;
        background-size: contain;
        background-repeat: no-repeat;
    }

    @media (max-width: 600px){
        .site-logo{
            max-width: 50%;
        }
        .nav_contact > span{
            padding: 1rem 0;
        }
        .appointment{
            margin-top: 1rem;
            font-size: 13px;
        }
        .nav_contact > span{
            line-height: 22.15px;
        }
        .sidebox_D{
            width:100%;
            left:0;
        }
    }

</style>
<nav class="lg:absolute top-0 inset-x-0">
    <div class="py-5 nav lg:px-10 px-8 h-full flex flex-row items-center justify-between">
        <div class="lg:w-80 w-10/12 w-full">
            <a aria-label="Home page link" href="#"><img alt="website logo" src={logo.src} title="website logo to the home page" width="120" height="45.61" style="max-width:100%; max-height:100%;"></a>
        </div>
        <div class="flex-1 h-full flex justify-end">
            <label class="kytz-label gap-3 py-3 px-6 rounded-lg" for="sideopen_D" class="flex items-center justify-end text-white flex  w-full text-2xl float-end">
                Menu 
