---
import Close from "../assets/close_btn.svg"
---
---

<div class="fixed hidden inset-0 backdrop-blur-2xl overflow-y-auto h-full w-full justify-center items-center" id="enquire_form">
    <!--modal content-->
    <div class="relative shadow-lg lg:w-3/6 w-11/12 rounded-md">
        <!-- close button -->
        <div class="absolute top-0 right-0 p-6 kytz_form_close" style="z-index: 1;">
            <button>
                <img width="12" height="12" src={Close.src}>
            </button>
        </div>
        <!-- contact form -->
        <div class="enquire_contact_form" id="enquire_popup_form">
            <div class="form_section">
                <div class="contact_heading pb-6">How we can help?</div>
                <form
                    action='https://forms.zohopublic.in/shelton/form/kytz/formperma/-cUkb2J22Tg1uOI7uraA2vpiWDI7469JuihEfBqrFKE/htmlRecords/submit'
                    name='form' method='POST' onSubmit='javascript:document.charset="UTF-8"; return zf_ValidateAndSubmit();'
                    accept-charset='UTF-8' enctype='multipart/form-data' id='form'><input type="hidden" name="zf_referrer_name"
                        value=""><!-- To Track referrals , place the referrer name within the " " in the above hidden input field -->
                    <div class="zf-templateWrapper"><!---------template Header Starts Here---------->
                        <div class="flex lg:flex-row flex-wrap gap-5 flex-col justify-between form_datas">
                            <div class="line w-full pb-5">
                                <input type="radio" class="how-we-help-radio" id="website" name="fav_language" value="HTML">
                                <input type="radio" class="how-we-help-radio" id="e_commerce" name="fav_language" value="Digital Marketing">
                                <input type="radio" class="how-we-help-radio" id="digital" name="fav_language" value="Product Design">
                                <input type="radio" class="how-we-help-radio" id="branding" name="fav_language" value="Others">
                            
                                <div class="flex gap-2 flex-wrap label-cover">
                                    <label class="how_label" for="website">Website Developement</label>
                                    <label class="how_label" for="e_commerce">E-Commerce</label>
                                    <label class="how_label" for="digital">Digital Marketing</label>
                                    <label class="how_label" for="branding">Branding</label>
                                </div>
                            </div>
                            <div class="line w-full">
                                <input type="text" class="line_field" id="Kname" name="SingleLine1" maxlength="255" fieldType=7 placeholder="Name*" required>
                                <span class="error" id="username_err"> </span>
                            </div>
                            <div class="line w-full">
                                <input type="text" class="line_field" id="Kcompany" maxlength="40" name="SingleLine"  fieldType=7 placeholder="Company name (optional)" required>
                                <span class="error" id="username_err"> </span>
                            </div>
                            <div class="line flex-1">
                                <input fieldType=9 type="text" maxlength="255" name="Email" checktype="c5" class="line_field" id="Kemail" placeholder="E-mail*" required>
                                <span class="error" id="email_err"> </span>
                            </div>
                            <div class="line flex-1">
                                <input type="text" name="PhoneNumber_countrycode" checktype="c2" value="" maxlength="18" class="line_field" placeholder="Telephone" required>
                                <span class="error" id="mobile_err"> </span>
                            </div>
                            <div class="line w-full">
                                <textarea class="line_field" name="Description" id="Kmessage" maxlength="500" placeholder="Tell us about your project*"></textarea>
                                <span class="error" id="message_err"> </span>
                            </div>
                            <div class=""><button class="apply_now mt-2 px-12 py-2">submit</button></div>
                        </div>
                    </div><!-- 'zf-templateWrapper' ends -->
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">var zf_DateRegex = new RegExp("^(([0][1-9])|([1-2][0-9])|([3][0-1]))[-](Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec|JAN|FEB|MAR|APR|MAY|JUN|JUL|AUG|SEP|OCT|NOV|DEC)[-](?:(?:19|20)[0-9]{2})$");
    var zf_MandArray = [ "SingleLine1", "SingleLine"]; 
    var zf_FieldArray = [ "SingleLine1", "SingleLine", "Email", "PhoneNumber_countrycode"]; 
    var isSalesIQIntegrationEnabled = false;
    var salesIQFieldsArray = [];
 </script>